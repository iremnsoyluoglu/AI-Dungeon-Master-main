# LLM API Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Settings
LLM_PROVIDER=openai  # openai, anthropic, azure, etc.
LLM_MODEL=gpt-4      # gpt-4, gpt-3.5-turbo, claude-3, etc.
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# Comic Vine API Configuration
COMIC_VINE_API_KEY=your_comic_vine_api_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# GetComics Configuration
GETCOMICS_API_ENDPOINT=https://getcomics.info/wp-json/wp/v2
GETCOMICS_RATE_LIMIT=1000  # ms between requests 