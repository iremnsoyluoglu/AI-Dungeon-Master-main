{
  "data_preparation": {
    "min_question_length": 10,
    "min_answer_length": 20,
    "max_content_length": 2000,
    "qa_pairs_per_document": 5
  },
  "model_config": {
    "base_model": "gpt2",
    "max_length": 512,
    "vocab_size": 50257,
    "n_positions": 1024
  },
  "training": {
    "num_epochs": 3,
    "batch_size": 4,
    "learning_rate": 5e-5,
    "warmup_steps": 500,
    "weight_decay": 0.01,
    "fp16": true,
    "gradient_accumulation_steps": 1,
    "save_steps": 1000,
    "save_total_limit": 2,
    "logging_steps": 100
  },
  "evaluation": {
    "test_split_ratio": 0.2,
    "evaluation_metrics": ["accuracy", "perplexity"],
    "min_accuracy_threshold": 0.6
  },
  "output": {
    "model_directory": "rag/fine_tuned_model",
    "checkpoint_directory": "rag/fine_tuning/checkpoints",
    "logs_directory": "rag/fine_tuning/logs"
  }
}
