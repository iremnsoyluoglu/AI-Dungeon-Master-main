{
  "document_processing": {
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "max_file_size_mb": 50,
    "supported_formats": [".pdf", ".txt"]
  },
  "vector_store": {
    "persist_directory": "rag/vector_db/chroma_db",
    "similarity_search_k": 5,
    "embedding_model": "text-embedding-ada-002"
  },
  "llm": {
    "model": "gpt-3.5-turbo",
    "temperature": 0.7,
    "max_tokens": 1000
  },
  "fine_tuning": {
    "base_model": "gpt2",
    "output_directory": "rag/fine_tuned_model",
    "training_parameters": {
      "num_epochs": 3,
      "batch_size": 4,
      "learning_rate": 5e-5,
      "warmup_steps": 500,
      "weight_decay": 0.01,
      "fp16": true
    }
  },
  "system": {
    "upload_directory": "rag/uploads/user_documents",
    "training_data_directory": "rag/fine_tuning/training_data",
    "log_level": "INFO"
  }
}
